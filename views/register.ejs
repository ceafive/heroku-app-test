<% include partials/header %>


<div class="container">
<div class="row"></div>
<h1 class="text-center">
	Sign Up
</h1>

<form class="form center-block" action="/register" method="POST">
	<div class="form-group">
		<label class="big" for="username">Username:</label>
		<input id="username" class="form-control" type="text" placeholder="username" name="username" required>
	</div>
	<div class="form-group">
		<label class="big" for="password">Password:</label>
		<input id="password" class="form-control" type="password" placeholder="password" name="password" required>
	</div>
	<div class="form-group">
		<label class="big" for="admin">Admin Code:</label>
		<input id="admin" class="form-control" type="text" placeholder="Enter Admin Code." name="adminCode">
	</div>
	<div class="form-group">
		<button class="btn btn-primary btn-block">Submit</button>
	</div>
</form>

</div>	
</div>


<% include partials/footer %>