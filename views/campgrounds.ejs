<% include partials/header %>

<div class="container text-center">

<header class="jumbotron">
	<div class="container">
		<h1>Welcome to YelpCamp!</h1>
			<p>View our handpicked campgrounds from all over the world!</p>
			<p><a class="btn btn-primary" href=/campgrounds/new>Add A New Campground</a></p>
	</div>
</header>

	<div class="row">
<% campgrounds.forEach(function(campground){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%=campground.image%>" alt="site image">
				<div>
	 				<h4 class="text-capitalize"><%= campground.name %></h4>
				</div>
					<div class="buttons">
						<a href="/campgrounds/<%= campground._id%>" class="btn btn-info btn-sm">Info</a>
						<% if(currentUser && campground.user.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
						<a><form class="form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
							<button class="btn btn-danger btn-sm">Delete</button>
						</form></a>
						<% } %>
					</div>
			</div>
		</div>
<% }); %>
	</div>
</div>

<% include partials/footer %>