<% include partials/header %>


<div class="container">
<div class="row">
<h1 class="text-center">
	Enter New Campground Here!
</h1>

<form class="form center-block" action="/campgrounds" method="POST">
	<div class="form-group">
		<label id= class="small" for="name">Name:</label>
		<input id="name" class="form-control" type="text" placeholder="name" name="campground[name]" required>
	</div>
	<div class="form-group">
		<label class="small" for="image">Image URL:</label>
		<input id="image" class="form-control" type="text" placeholder="image url" name="campground[image]" required>
	</div>
	<div class="form-group">
		<label class="small" for="description">Description:</label>
		<textarea id="description" class="form-control" rows="10" placeholder="description" name="campground[description]" required></textarea>
	</div>
	<div class="form-group">
		<button class="btn btn-primary btn-block">Submit</button>
	</div>
</form>

<p class="text-center"><a  href="/campgrounds">Show Campgrounds</a></p>

</div>	
</div>
	
	
<% include partials/footer %>