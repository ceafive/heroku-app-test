<% include partials/header %>

<div class="container text-center">
	<a href="/campgrounds">Go Back</a>
	<h1 class="text-uppercase"><%= campground.name %></h1>
<div>
	<img class="img-responsive center-block img-rounded" src="<%= campground.image %>" alt="Image Link">
	<p class="lead textwidth"><%- campground.description %></p>
	<p class="text-right"><kbd>Submitted By: <%= campground.user.username %></kbd></p>
	<% if(currentUser && campground.user.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
		<a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground._id%>/edit">Edit Description</a>
	<% } %>
</div>
</div>

<% include partials/footer %>