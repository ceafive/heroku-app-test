<% include partials/header %>


<div class="container">
<div class="row">
<h1 class="text-center">
	Edit "<%= campground.name %>" Description!
</h1>

<form class="form center-block" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
	<div class="form-group">
		<label for="name" class="small">Edit Name:</label>
		<input id="name" class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" required>
	</div>
	
	<div class="form-group">
		<label for="description" class="small">Edit Description:</label>
		<textarea id="description" class="form-control" rows="10" name="campground[description]" required><%- campground.description %></textarea>
	</div>
	
	<div class="form-group">
		<button class="btn btn-primary btn-block">Update</button>
	</div>
</form>

<p class="text-center"><a href="/campgrounds/<%= campground._id %>">Show Campgrounds</a></p>

</div>	
</div>
	
	
<% include partials/footer %>